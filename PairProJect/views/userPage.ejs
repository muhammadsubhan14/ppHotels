<%- include('./user/header') %>

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f8f8;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    text-align: center;
  }

  h1 {
    color: #333;
  }

  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    margin: 20px;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card img {
    width: 100%;
    border-bottom: 1px solid #ddd;
  }

  .card-content {
    padding: 20px;
  }

  h3 {
    color: #333;
    font-size: 1.5em;
    margin-bottom: 10px;
  }

  p {
    color: #666;
    margin: 5px 0;
  }

  button {
    background-color: #3498db;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #2980b9;
  }

  h1 {
    color: #3498db;
    /* Warna biru yang menarik */
    font-size: 2.5em;
    /* Ukuran font yang lebih besar */
    margin-bottom: 20px;
    /* Ruang bawah yang lebih besar */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    /* Bayangan teks untuk memberikan efek 3D */
  }
</style>

<body>
  <form action="#" method="post">
    <div class="container">
      <h1>Choose Your Room, Hun</h1>
      <% result.forEach(el => { %>
      <div class="card">
        <img src="<%=el.imgUrl %>" alt="room hotel">
        <div class="card-content">
          <h3><%= el.roomNumber %></h3>
          <p><%= el.roomType %></p>
          <p><%= el.rupiah %></p>
          <button><a href="/users/book/<%= el.id %>">Book Now</a></button>
        </div>
      </div>
      <% }) %>
    </div>
  </form>
</body>

<%- include('./user/footer') %>
